<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivbgplaylists"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="110dp" />

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <ImageView
        android:id="@+id/ivhinhbhplaylist"
        android:layout_alignBottom="@id/ivbgplaylists"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tvtenbhplaylist"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ivhinhbhplaylist"
        android:layout_alignBottom="@id/ivbgplaylists"
        android:text="nhung bai hit cua"
        android:textSize="13sp"
        android:layout_marginLeft="13dp"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>