<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
                android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvindexplaymusic"
                android:textSize="19sp"
                android:text="1"
                android:layout_margin="10dp"
                android:textColor="#f9f3f3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvtenbhplaymusic"
                android:text="ten ca khuc"
                android:singleLine="true"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:textSize="19sp"
                android:textColor="#f9f3f3"
                android:layout_toRightOf="@+id/tvindexplaymusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvtencasiplaymusic"
                android:text="khanh phuong"
                android:singleLine="true"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#f9f3f3"
                android:layout_below="@+id/tvtenbhplaymusic"
                android:layout_toRightOf="@+id/tvindexplaymusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

</RelativeLayout>